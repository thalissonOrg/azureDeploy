<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=0.9, maximum-scale=0.9, user-scalable=0"/>
        <meta name="description" content="">
        <meta name="robots" content="index,follow">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta http-equiv="Content-Language" content="{{ req.lang }}">

        <title>{% block title %}{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="/css/libs.css" type="text/css">
            <link rel="stylesheet" href="/css/main.css" type="text/css">
        {% endblock %}

        {% for locale in appLocales.availableLanguages %}
            {% set href = baseUrl + plainRoute | langUrl(locale) %}
            <link hreflang="{{ locale }}" rel="alternate" href="{{ href }}" />
        {% endfor %}
    </head>
    <body>
        {% block content %}{% endblock %}

        <div>
            {% set allLanguages = getAllLanguageUrls(req) %}
            {% for locale, url in allLanguages %}
                <a href="{{ url }}">{{ locale | translate(req.lang) }}</a>
            {% endfor %}
        </div>

        {% block javascripts %}
            <script type="text/javascript" src="/js/libs/jquery.min.js"></script>
            <script type="text/javascript" src="/js/libs/bootstrap.min.js"></script>
            <script type="text/javascript" src="/js/scripts.js"></script>
        {% endblock %}
    </body>
</html>
